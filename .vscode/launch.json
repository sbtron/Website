{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch (Chrome)",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:1339/index.html",
            "webRoot": "${workspaceRoot}/",
            "sourceMaps": true,
            "preLaunchTask": "webserver",
            "userDataDir": "${workspaceRoot}/.tempChromeProfileForDebug",
            "runtimeArgs": [
                "--enable-unsafe-es3-apis" 
            ]
        }
    ]
}